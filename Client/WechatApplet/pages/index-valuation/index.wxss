page {
  background-color: #f5f5f5;
}
.header{
  position: fixed;
  top: 1px;
  right: 0;
  left: 0;
  background-color: white;
}
.update-tip{
  font-size: 13px;
  height: 50px;
  line-height: 50px;
  padding-left: 5px;
}

.swiper-tab {
  width: 100%;
  height: 50px;
  font-size: 15px;
  display: flex;
  align-items: center;
  flex-direction: row;
  text-align: center;
  background-color: #fff;
  border-bottom:solid 1px #f5f5f5;
}

.swiper-tab-list {
  font-size: 15px;
  display: inline-block;
  width: 20%;
  color: #909090;
  height: 48px;
  line-height: 48px;
}

.on {
  color:#303030;
  font-weight:900;
  border-bottom:solid 3px #fcc21b;
}

.index-header{
  font-size: 13px;
  display: flex;
  height: 36px;
  align-items: center;
  text-align: center;
  border-bottom: solid 1px #f5f5f5;
}

.index-header text{
  width: 20%;
}

.index-header text:first-child{
  text-align: left;
  text-indent: 5px;
}

.main{
  display: flex;
  position: fixed;
  top: 140px;
  right: 0;
  left: 0;
  bottom: 48px;
}

.index-list{
  width: 100%;
  height: 50px;
  flex-wrap: wrap;
  justify-content: space-between;
  display: flex;
  align-items: center;
  text-align: left;
  border-bottom: solid 1px #f5f5f5;
}
.index-list view{
  width: 20%;
}
.index-list-title{
  width: 100%;
  display: inline-block;
  font-size: 15px;
  color: #303030;
  font-weight: bold;
  text-align: left;
  text-indent: 5px;
}
.index-list-subtitle{
  width: 100%;
  display: inline-block;
  font-size: 13px;
  color: #909090;
  text-align: left;
  text-indent: 5px;
}

.index-list-item{
  width: 100%;
  display: inline-block;
  text-align: center;
  font-size: 15px;
}
.index-list-subitem{
  width: 100%;
  display: inline-block; 
  color: #909090;
  font-size: 13px;
  text-align: center;
}
